{
	"name": "writing-assistant",
	"displayName": "Writing Assistant",
	"description": "Catch writing mistakes and insensitive language, improve your writing quality. Works on strings and comments of programming languages, and markdown files. Powered by write-good and alex.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.56.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished",
		"onCommand:writing-asssistant.analyzeFile"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "writing-assistant.analyzeFile",
				"title": "Writing Assistant: Analyze File"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/alex": "^9.1.0",
		"@types/glob": "^7.1.3",
		"@types/lodash": "^4.14.170",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.56.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^3.4.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"prettier": "^2.3.0",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"alex": "^9.1.0",
		"lodash": "^4.17.21"
	}
}
