{
	"license": "MIT",
	"name": "writing-assistant",
	"displayName": "Writing Assistant",
	"description": "Catch writing mistakes and insensitive language, improve your writing quality. Works on strings and comments of programming languages, and markdown files. Powered by write-good and alex.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.56.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:writing-asssistant.analyzeFile",
		"onLanguage:asciidoc",
		"onLanguage:apex",
		"onLanguage:javascript",
		"onLanguage:javascriptreact",
		"onLanguage:typescript",
		"onLanguage:typescriptreact",
		"onLanguage:al",
		"onLanguage:c",
		"onLanguage:cpp",
		"onLanguage:csharp",
		"onLanguage:dart",
		"onLanguage:flax",
		"onLanguage:fsharp",
		"onLanguage:go",
		"onLanguage:groovy",
		"onLanguage:haxe",
		"onLanguage:java",
		"onLanguage:jsonc",
		"onLanguage:kotlin",
		"onLanguage:less",
		"onLanguage:pascal",
		"onLanguage:objectpascal",
		"onLanguage:php",
		"onLanguage:rust",
		"onLanguage:scala",
		"onLanguage:sass",
		"onLanguage:scss",
		"onLanguage:shaderlab",
		"onLanguage:stylus",
		"onLanguage:swift",
		"onLanguage:verilog",
		"onLanguage:vue",
		"onLanguage:css",
		"onLanguage:coffeescript",
		"onLanguage:dockerfile",
		"onLanguage:gdscript",
		"onLanguage:graphql",
		"onLanguage:julia",
		"onLanguage:makefile",
		"onLanguage:perl",
		"onLanguage:perl6",
		"onLanguage:puppet",
		"onLanguage:r",
		"onLanguage:ruby",
		"onLanguage:shellscript",
		"onLanguage:tcl",
		"onLanguage:yaml",
		"onLanguage:elixir",
		"onLanguage:python",
		"onLanguage:nim",
		"onLanguage:powershell",
		"onLanguage:ada",
		"onLanguage:hive-sql",
		"onLanguage:pig",
		"onLanguage:plsql",
		"onLanguage:sql",
		"onLanguage:lua",
		"onLanguage:elm",
		"onLanguage:haskell",
		"onLanguage:brightscript",
		"onLanguage:diagram",
		"onLanguage:vb",
		"onLanguage:bibtex",
		"onLanguage:erlang",
		"onLanguage:matlab",
		"onLanguage:clojure",
		"onLanguage:racket",
		"onLanguage:lisp",
		"onLanguage:terraform",
		"onLanguage:COBOL",
		"onLanguage:fortran-modern",
		"onLanguage:SAS",
		"onLanguage:strata",
		"onLanguage:html",
		"onLanguage:xml",
		"onLanguage:twig",
		"onLanguage:genstat",
		"onLanguage:cfml"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "writing-assistant.analyzeFile",
				"title": "Writing Assistant: Analyze File"
			}
		],
		"configuration": {
			"title": "Writing Analyzer",
			"properties": {
				"writing-analyzer.autoAnalyzeOn": {
					"description": "Automatically analyze the current file when editing or saving.",
					"type": "string",
					"default": "never",
					"enum": [
						"save",
						"edit",
						"never"
					]
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run -S esbuild-base -- --minify",
		"esbuild-base": "rimraf out && esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
		"compile": "npm run -S esbuild-base -- --sourcemap",
		"watch": "npm run -S esbuild-base -- --sourcemap --watch",
		"fmt": "prettier --write \"src/**/*.ts\"&& npm run test -- --fix",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/alex": "^9.1.0",
		"@types/glob": "^7.1.3",
		"@types/lodash": "^4.14.170",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vfile": "^4.0.0",
		"@types/vscode": "^1.56.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"esbuild": "^0.12.5",
		"eslint": "^7.19.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^3.4.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"prettier": "^2.3.0",
		"rimraf": "^3.0.2",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"dictionary-en": "^3.1.0",
		"lodash": "^4.17.21",
		"retext-english": "^3.0.4",
		"retext-equality": "^5.7.0",
		"retext-indefinite-article": "^2.0.3",
		"retext-passive": "^3.0.0",
		"retext-profanities": "^6.1.0",
		"retext-readability": "^6.0.0",
		"retext-repeated-words": "^3.0.0",
		"retext-simplify": "^6.0.0",
		"retext-spell": "^4.0.1",
		"unified": "^9.2.1",
		"vfile": "^5.0.1",
		"vfile-sort": "^3.0.0"
	}
}
